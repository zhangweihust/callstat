<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="53dp" android:layout_width="fill_parent">
    <ImageView android:layout_width="40dp" 
        android:id="@+id/app_icon" 
        android:layout_alignParentLeft="true" 
        android:layout_marginLeft="10dp" 
        android:layout_height="40dp" 
        android:layout_centerVertical="true"
        android:focusable="false"></ImageView>
    <LinearLayout android:layout_toRightOf="@+id/app_icon"
    	android:id="@+id/linearLayout1" 
    	android:layout_width="wrap_content" 
    	android:orientation="vertical" 
   		android:layout_height="60dp" 
   		android:layout_marginLeft="10dp"
   		android:layout_marginRight="5dp">
        <TextView android:layout_width="150dp" 
            android:textColor="@color/text_black" 
            android:id="@+id/tv_app_name" 
            android:text="UC浏览器" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dp" 
            android:textSize="16sp"
            android:singleLine="true"
            android:focusable="false"></TextView>
        <TextView android:id="@+id/tv_app_traffic" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/gray" android:text="13.0MB" android:layout_marginTop="2dp" android:textSize="14sp"></TextView>
    </LinearLayout>
    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" 
    android:id="@+id/img_on_off" android:layout_alignParentRight="true" 
    android:layout_centerInParent="true" android:layout_marginRight="10dp" 
    android:focusable="false"></ImageView>
</RelativeLayout>
