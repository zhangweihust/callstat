<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg" >

    <RelativeLayout
        android:id="@+id/detail_layout"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@drawable/top_border" >

        <RelativeLayout
            android:id="@+id/query_back_rl"
			style="@style/TitleStyle">

            <TextView
                android:id="@+id/refresh_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/title_go_back" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/title_line_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/query_back_rl"
            android:background="@drawable/top_verticalbar"
            android:padding="0dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/feestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动修改"
            android:textColor="@color/white"
            android:textSize="20sp" 
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detail_layout"
        android:orientation="vertical" >
	<RelativeLayout
            android:id="@+id/operator_number_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_biglist_bar"
            android:padding="0dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/operator_number_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="运营商号码"
                android:textColor="@color/setting_text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/operator_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/operator_number_name"
                android:layout_alignParentBottom="true"
                android:text="10086"
                android:textColor="@color/setting_text" />
            
            <Button
	            android:id="@+id/operator_number_btn"
	            android:layout_width="60dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/btn_topup_selector"
	            android:text="恢  复"
	            android:textColor="@color/setting_text"
	            android:textSize="15dp" />
            
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/HFUsedCode_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_biglist_bar"
            android:padding="0dp" >

            <TextView
                android:id="@+id/HFUsedCode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="查询已用话费"
                android:textColor="@color/setting_text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/HFUsedCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/HFUsedCode_name"
                android:layout_alignParentBottom="true"
                android:text="查话费"
                android:textColor="@color/setting_text" />
            
            <Button
	            android:id="@+id/HFUsedCode_btn"
	            android:layout_width="60dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/btn_topup_selector"
	            android:text="恢  复"
	            android:textColor="@color/setting_text"
	            android:textSize="15dp" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/HFYeCode_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_biglist_bar"
            android:padding="0dp" >

            <TextView
                android:id="@+id/HFYeCode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="查询可用话费"
                android:textColor="@color/setting_text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/HFYeCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/HFYeCode_name"
                android:layout_alignParentBottom="true"
                android:text="查话费"
                android:textColor="@color/setting_text" />
            
            <Button
	            android:id="@+id/HFYeCode_btn"
	            android:layout_width="60dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/btn_topup_selector"
	            android:text="恢  复"
	            android:textColor="@color/setting_text"
	            android:textSize="15dp" />
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GprsUsedCode_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_biglist_bar" >

            <TextView
                android:id="@+id/GprsUsedCode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="查询已用流量"
                android:textColor="@color/setting_text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/GprsUsedCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/GprsUsedCode_name"
                android:layout_alignParentBottom="true"
                android:text="CXGLL"
                android:textColor="@color/setting_text" />
            
            <Button
	            android:id="@+id/GprsUsedCode_btn"
	            android:layout_width="60dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/btn_topup_selector"
	            android:text="恢  复"
	            android:textColor="@color/setting_text"
	            android:textSize="15dp" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/GprsYeCode_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/set_biglist_bar" >

            <TextView
                android:id="@+id/GprsYeCode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="查询可用流量"
                android:textColor="@color/setting_text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/GprsYeCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/GprsYeCode_name"
                android:layout_alignParentBottom="true"
                android:text="CXGLL"
                android:textColor="@color/setting_text" />
            
            <Button
	            android:id="@+id/GprsYeCode_btn"
	            android:layout_width="60dp"
	            android:layout_height="40dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:background="@drawable/btn_topup_selector"
	            android:text="恢  复"
	            android:textColor="@color/setting_text"
	            android:textSize="15dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>