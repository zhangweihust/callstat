<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:padding="10dip" android:orientation="vertical">
	<TextView android:layout_height="wrap_content" android:textSize="16dip"
		android:layout_width="fill_parent" android:text="@string/tip1" android:textColor="@color/white"/>
		
		<TextView android:layout_height="wrap_content" android:textSize="14dip"
		android:layout_width="fill_parent" android:text="@string/tip2" android:textColor="@color/white"/>
		<TextView android:layout_height="wrap_content" android:textSize="15dip"
		android:layout_width="fill_parent" android:text="@string/tip3" android:textColor="@color/white"/>
		<TextView android:layout_height="wrap_content" android:textSize="14dip"
		android:layout_width="fill_parent" android:text="@string/tip4" android:textColor="@color/white"/>
	<LinearLayout android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_marginTop="10dip" android:gravity="center_vertical">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:textSize="16dip" android:text="@string/tip5" android:textColor="@color/white"></TextView>
		<CheckBox android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/checkAsk"></CheckBox>
	</LinearLayout>
</LinearLayout>
