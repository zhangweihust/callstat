<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/popup_bj2"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/popup_tetle_bj"
        android:padding="0dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="手动输入话费数据"
            android:textColor="@color/setting_text_black"
            android:textSize="16sp" />
    </LinearLayout>
    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:background="@color/bg_gray"
        android:fadingEdge="none"
        android:cacheColorHint="#00000000"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center" >

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_topup_selector"
            android:text="确   定"
            android:textColor="@color/setting_text"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
