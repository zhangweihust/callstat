<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <TextView
        android:id="@+id/blank"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/before_onclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank"
        android:background="@drawable/floatview_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="-3dp"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/floatview_icon" />

        <TextView
            android:id="@+id/left_textView"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/floatview_txt_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/floatwindow_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="1152.52"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/floatwindow_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/floatwindow_string"
                android:text="å…ƒ"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/right_textView"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/floatview_icon"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/floatview_close_new"
        android:visibility="gone" />

</RelativeLayout>