<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/top_border" >

        <TextView
            android:id="@+id/feestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/title_line_left"
            android:text="帐号设置"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/title_line_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/setting_rl"
            android:background="@drawable/top_verticalbar"
            android:padding="0dp" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@color/item_title_bg"
        android:gravity="center_vertical"
        android:padding="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="设置预算"
            android:textColor="@color/setting_text" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_fee_plan"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/new_biglist_selector"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_yusuan_nor" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView4"
            android:text="话费预算"
            android:textColor="@color/setting_text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="元/月"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp" >
        </EditText>

        <EditText
            android:id="@+id/calls_et"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/textView11"
            android:background="@drawable/telnumber"
            android:gravity="left|center_vertical"
            android:maxLength="5"
            android:numeric="decimal"
            android:textColor="@color/setting_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_phone_traffic_plan"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/new_biglist_selector"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_baoyue_nor" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView5"
            android:text="包月流量"
            android:textColor="@color/setting_text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="MB/月"
            android:textColor="@color/setting_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/traffic_et"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/textView14"
            android:background="@drawable/telnumber"
            android:gravity="left|center_vertical"
            android:maxLength="5"
            android:numeric="integer"
            android:textColor="@color/setting_text" >
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/toback"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_topup_selector"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@drawable/init_settingbtn_selector"
            android:textSize="20sp" />

        <Button
            android:id="@+id/finish_btn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_topup_selector"
            android:gravity="center"
            android:text="完成"
            android:textColor="@drawable/init_settingbtn_selector"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
