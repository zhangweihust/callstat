<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
	
    <style name="PushLeftAnimation" mce_bogus="1">
         <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimationFromRightToLeft</item>
    </style>
    
    <style name="PushUpAnimation" mce_bogus="1">
         <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AnimationFromDownToUp</item>
    </style>
        
   <!-- 从右往左推 -->
    <style mce_bogus="1" name="AnimationFromRightToLeft" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    --></style>

    <!-- 从下网上推 -->
    <style mce_bogus="1" name="AnimationFromDownToUp" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_up_out</item>
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_down_out</item>
    --></style>
</resources>
